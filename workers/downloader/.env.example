# Core Configuration
ENVIRONMENT=local
SERVICE_NAME=downloader-worker
LOG_LEVEL=debug

# AWS Config
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Storage Configuration
STORAGE_ENABLE_METRICS=true
STORAGE_MAX_RETRIES=3
STORAGE_TIMEOUT=30s

# S3 specific Configuration
S3_BUCKET=audit-reports-local

# Lambda Configuration
LAMBDA_TIMEOUT=180
LAMBDA_PARTIAL_BATCH_FAILURE=true

# HTTP Configuration
HTTP_TIMEOUT=120s
HTTP_MAX_RETRIES=3
HTTP_USER_AGENT=audit-reports-downloader/1.0
HTTP_ADDR=:8080

# Handler Configuration
HANDLER_TIMEOUT=30s
HANDLER_MAX_REQUEST_SIZE=10485760
HANDLER_ENABLE_HEALTH=true
HANDLER_ENABLE_METRICS=true
HANDLER_ENABLE_TRACING=false
HANDLER_PLATFORM=http

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_BACKOFF=100ms
RETRY_MAX_BACKOFF=10s
RETRY_BACKOFF_MULTIPLIER=2.0

OBSERVABILITY_LOG_PROVIDER=console
OBSERVABILITY_METRICS_PROVIDER=noop
OBSERVABILITY_CLOUDWATCH_REGION=us-east-2
OBSERVABILITY_CLOUDWATCH_LOG_GROUP=/aws/lambda/downloader-worker
OBSERVABILITY_CLOUDWATCH_NAMESPACE=DownloaderWorker/Metrics