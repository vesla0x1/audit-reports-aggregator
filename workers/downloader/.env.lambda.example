# Core Configuration
ENVIRONMENT=local
SERVICE_NAME=downloader-worker
LOG_LEVEL=debug

# Adapter Selection
ADAPTER_HANDLER=lambda
ADAPTER_STORAGE=s3
ADAPTER_LOGGER=cloudwatch
ADAPTER_METRICS=cloudwatch

# AWS Config
AWS_REGION=us-east-2

# Storage Configuration
STORAGE_BUCKET_OR_PATH=audit-reports-local
STORAGE_ENABLE_METRICS=true
STORAGE_MAX_RETRIES=3
STORAGE_TIMEOUT=30s

# Lambda Configuration
LAMBDA_TIMEOUT=180
LAMBDA_PARTIAL_BATCH_FAILURE=true

CLOUDWATCH_REGION=us-east-2
CLOUDWATCH_LOG_GROUP=/workers/downloader
CLOUDWATCH_NAMESPACE=workers/downloader