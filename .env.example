# Core Infrastructure Configuration
ENVIRONMENT=local
PROJECT_NAME=audit-reports-aggregator

# AWS Configuration (for infrastructure)
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
LOCALSTACK_ENDPOINT=http://localhost:4566

# Lambda Infrastructure Configuration
LAMBDA_FUNCTION_NAME_DOWNLOADER=audit-reports-local-downloader
LAMBDA_TIMEOUT=180
LAMBDA_MEMORY_SIZE=512
LAMBDA_ROLE_ARN=arn:aws:iam::000000000000:role/audit-reports-local-lambda-execution

# Storage Infrastructure
S3_BUCKET=audit-reports-local-reports
S3_LAMBDA_BUCKET=audit-reports-local-reports-lambda

# Docker Configuration
DOCKER_NETWORK=audit-network
DOCKER_COMPOSE_FILE=docker-compose.local.yml

# Terraform Variables
TF_VAR_aws_region=us-east-2
TF_VAR_localstack_endpoint=http://localhost:4566
TF_VAR_environment=local
TF_VAR_project_name=audit-reports

# LocalStack Configuration
LOCALSTACK_SERVICES=sqs,s3,lambda,iam,logs
LOCALSTACK_DEBUG=0
LOCALSTACK_DATA_DIR=/var/lib/localstack/data
LOCALSTACK_LAMBDA_EXECUTOR=docker-reuse
LOCALSTACK_LAMBDA_REMOTE_DOCKER=true
LOCALSTACK_LAMBDA_REMOVE_CONTAINERS=true
LOCALSTACK_DOCKER_HOST=unix:///var/run/docker.sock
LOCALSTACK_AWS_DEFAULT_REGION=us-east-1
LOCALSTACK_PERSISTENCE=1
LOCALSTACK_EAGER_SERVICE_LOADING=1
LOCALSTACK_HOST=localhost:4566
LOCALSTACK_TMPDIR=/var/lib/localstack/tmp

# LocalStack Ports
LOCALSTACK_PORT=4566
LOCALSTACK_PORT_RANGE=4510-4559